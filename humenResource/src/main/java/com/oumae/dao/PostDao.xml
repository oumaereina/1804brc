<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.oumae.dao.PostDao">
    <insert id="insertPost">
        INSERT INTO T_POST (P_ID, P_NAME, P_D_ID, P_NUM)
        VALUES (POST_SQL.nextval,#{P_NAME},#{P_D_ID},#{P_NUM})
    </insert>
    <update id="updatePostById">
        UPDATE T_POST
        <set>
            <if test="P_NAME!=null">
                P_NAME=#{P_NAME}
            </if>
            <if test="P_D_ID!=null">
                P_D_ID=#{P_D_ID}
            </if>
            <if test="P_NUM!=null">
                P_NUM=#{P_NUM}
            </if>
        </set>
        <where>
            P_ID=#{P_ID}
        </where>
    </update>
    <delete id="deletePostById">
        DELETE FROM T_POST WHERE P_ID=#{P_ID}
    </delete>
    <select id="selectById" resultType="com.oumae.model.Post">
        select * from T_POST WHERE P_ID=#{P_ID}
    </select>
    <select id="selectAll" resultType="com.oumae.model.Post">
        select * from T_POST
    </select>
    <select id="selectByDid" resultType="com.oumae.model.Post">
        select * from T_POST WHERE P_D_ID=#{P_D_ID}
    </select>
    <select id="selectByNAME" resultType="com.oumae.model.Post">
        select * from T_POST WHERE P_NAME=#{P_D_ID}
    </select>
</mapper>